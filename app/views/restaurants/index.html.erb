
<div class="container">
  <h1>All Restaurants</h1>
  <div class="cards">
    <% @restaurants.each do |restaurant| %>
    <div class="card" style="width: 18rem;">
      <img src="https://source.unsplash.com/400x400/?restaurant" class="card-img-top" alt=<%= restaurant.name %>>
      <div class="card-body">
        <h5 class="card-title"><%= restaurant.name %></h5>
        <p class="card-text"><%= restaurant.address %> </p>
        <%= link_to "Click", restaurant_path(restaurant), class: "btn btn-primary" %>
      </div>
    </div>
    <% end %>
  </div>
  <div>
    <%= link_to "Add new Restaurant", new_restaurant_path %>
  </div>
</div>


